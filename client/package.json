{
  "name": "ngrx-arch",
  "version": "2.0.0",
  "scripts": {
    "ng": "ng",
    "serve": "ng serve --aot",
    "serve:hmr": "ng serve --configuration hmr",
    "prestart": "npm run build-sdk && npm run build-svgs",
    "start": "run-p watch-parse-i18n serve",
    "prebuild:dev": "npm run parse-i18n && npm run lint && npm run validate-i18n && npm run build-sdk && npm run build-svgs",
    "build:dev": "node --max_old_space_size=4096 ./node_modules/@angular/cli/bin/ng build --configuration=production",
    "prebuild": "npm i && npm run prebuild:dev",
    "build": "node --max_old_space_size=4096 ./node_modules/@angular/cli/bin/ng build --configuration=production",
    "parse-i18n": "node dev-tools/i18n/parser.js",
    "watch-parse-i18n": "npm-watch parse-i18n",
    "extract-i18n": "ngx-translate-extract -i ./src -o ./i18n.json -c -r -f namespaced-json",
    "prevalidate-i18n": "npm run parse-i18n && npm run extract-i18n",
    "validate-i18n": "node dev-tools/i18n/validator.js",
    "api-doc": "node dev-tools/api-doc",
    "serve:dist": "npm run build && node dev-tools/dist-server",
    "prebuild-sdk": "rimraf src/app/sdk/microservices/*",
    "build-sdk": "npm run build-sdk:api",
    "build-sdk:api": "node_modules/.bin/ng-swagger-gen -c swagger/api.json",
    "build-svgs": "svg-sprite-generate -d src/assets/icons -o src/assets/images/icons.svg",
    "preanalyzer": "npm run parse-i18n && npm run build-sdk && npm run build-svgs && ng build --configuration=production --stats-json",
    "analyzer": "webpack-bundle-analyzer dist/stats.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "lint": "ng lint --format=stylish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run validate-i18n"
    }
  },
  "watch": {
    "parse-i18n": {
      "patterns": [
        "./bundles"
      ],
      "extensions": "properties"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~9.0.0-next.8",
    "@angular/cdk": "^8.2.2",
    "@angular/common": "~9.0.0-next.8",
    "@angular/compiler": "~9.0.0-next.8",
    "@angular/core": "~9.0.0-next.8",
    "@angular/forms": "~9.0.0-next.8",
    "@angular/material": "~8.2.2",
    "@angular/platform-browser": "~9.0.0-next.8",
    "@angular/platform-browser-dynamic": "~9.0.0-next.8",
    "@angular/router": "~9.0.0-next.8",
    "@ngrx/effects": "^8.3.0",
    "@ngrx/router-store": "^8.3.0",
    "@ngrx/store": "^8.3.0",
    "@ngrx/store-devtools": "^8.3.0",
    "@ngx-translate/core": "^11.0.1",
    "@ngx-translate/http-loader": "^4.0.0",
    "d3": "^5.12.0",
    "hammerjs": "^2.0.8",
    "immutable": "^4.0.0-rc.12",
    "lodash": "^4.17.15",
    "memo-decorator": "^1.0.2",
    "moment": "^2.24.0",
    "ngx-cookie-service": "^2.2.0",
    "rxjs": "~6.5.3",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.900.0-next.6",
    "@angular-devkit/build-ng-packagr": "^0.900.0-next.6",
    "@angular/cli": "~9.0.0-next.6",
    "@angular/compiler-cli": "~9.0.0-next.8",
    "@angular/language-service": "~9.0.0-next.8",
    "@angularclass/hmr": "^2.1.3",
    "@biesbjerg/ngx-translate-extract": "^4.2.0",
    "@types/d3": "^5.7.2",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.141",
    "@types/node": "~12.7.8",
    "cli-color": "^1.4.0",
    "codelyzer": "^5.1.2",
    "express": "^4.17.1",
    "husky": "^3.0.7",
    "jest": "^24.9.0",
    "jest-preset-angular": "^7.1.1",
    "ng-packagr": "^5.5.1",
    "ng-swagger-gen": "^1.8.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "properties": "^1.2.1",
    "rimraf": "^3.0.0",
    "svg-sprite-generator": "0.0.7",
    "swagger-ui-express": "^4.1.1",
    "ts-node": "~8.4.1",
    "tsickle": "^0.37.0",
    "tslint": "~5.20.0",
    "typescript": "~3.5.3",
    "webpack-bundle-analyzer": "^3.5.2"
  }
}
